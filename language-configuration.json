{
    "comments": {
      "lineComment": "#",
      "blockComment": ["/*", "*/"]
    },
    "brackets": [
      ["{", "}"],
      ["(", ")"]
    ],
    "autoClosingPairs": [
      { "open": "{", "close": "}" },
      { "open": "(", "close": ")" },
      { "open": "\"", "close": "\"" },
    ],
    "autoCloseBefore": ";:.,=}])>` \n\t",
    "surroundingPairs": [
      { "open": "{", "close": "}" },
      { "open": "(", "close": ")" },
      { "open": "\"", "close": "\"" },
    ],
    "folding": {
      "markers": {
        "start": "^\\s*#region\\b",
        "end":   "^\\s*#endregion\\b"
      }
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
    "indentationRules": {
      "increaseIndentPattern": "^(?!.*\\*/).*[\\{\\(][^\\}\\)]*$",
      "decreaseIndentPattern": "^(?!\\s*#)\\s*[\\}\\)]"
  }
}
  